{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ] /* Specify multiple folders that act like './node_modules/@types'. */
  },
  "compileOnSave": true,
  "include": ["src"]
}
